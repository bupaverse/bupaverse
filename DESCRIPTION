Package: bupaverse
Type: Package
Title: Easily Install and Load the 'bupaverse'
Version: 0.0.0.9000
Authors@R: c(
    person("Gerard","van Hulzen", email = "gerard.vanhulzen@uhasselt.be", role = c("aut"), comment = c(ORCID = "0000-0001-8962-9515")),
    person("Gert","Janssenswillen", email = "gert.janssenswillen@uhasselt.be", role = c("aut", "cre"), comment = c(ORCID = "0000-0002-7474-2088"))
